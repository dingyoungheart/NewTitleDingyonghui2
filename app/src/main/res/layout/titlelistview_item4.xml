<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item4_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="11111111111111111"
            android:textColor="#003300"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item4_iv1"
                android:layout_width="wrap_content"
                android:layout_height="88dp"
                android:layout_weight="1"
                android:src="@drawable/dyh" />

            <ImageView
                android:id="@+id/item4_iv2"
                android:layout_width="wrap_content"
                android:layout_height="88dp"
                android:layout_weight="1"
                android:src="@drawable/dyh" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item4_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="光明网"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_item4_pinglun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="1评论"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_item4_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="20分钟前"
                android:textSize="10sp" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>