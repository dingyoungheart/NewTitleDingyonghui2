<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item2_title"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:textColor="#003300"
            android:text="逃犯杀死一家人独留傻子男孩，谁料几月后小傻子给他致命一击"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/item2_iv"
            android:layout_marginTop="12dp"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_weight="0.8"
            android:src="@drawable/dyh"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_item2_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="光明网"
            android:textSize="10sp"/>
        <TextView
            android:id="@+id/tv_item2_pinglun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="1评论"
            android:textSize="10sp"/>
        <TextView
            android:id="@+id/tv_item2_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="20分钟前"
            android:textSize="10sp"/>
    </LinearLayout>

</LinearLayout>