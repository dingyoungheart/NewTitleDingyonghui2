<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.dingyonghui.newtitledingyonghui.MainActivity"
    android:id="@+id/lin_home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/rel_top"
            android:layout_width="match_parent"
            android:background="#FF3333"
            android:layout_height="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginLeft="5dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/widget_title"
                    />
                <LinearLayout
                    android:id="@+id/rl"
                    android:layout_gravity="center"
                    android:background="@color/biz_audio_progress_first"
                    android:layout_width="200dp"
                    android:layout_height="30dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:src="@drawable/detail_search_icon"
                        />
                    <TextView
                        android:id="@+id/tv_search"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="搜你想搜的"
                        />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal">

            <android.support.design.widget.TabLayout
                android:id="@+id/tablayout_title"
                android:layout_width="280dp"
                android:layout_height="36dp"
                app:tabSelectedTextColor="@android:color/holo_red_dark"
                app:tabIndicatorColor="@color/biz_audio_progress_bg"/>

            <ImageView
                android:id="@+id/iv_pindaoguanli"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:alpha="@android:integer/config_mediumAnimTime"
                android:src="@drawable/addred_channel_titlbar_press"/>

        </LinearLayout>


        <View
            android:id="@+id/View1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC" />

        <android.support.v4.view.ViewPager

            android:layout_weight="1"
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </LinearLayout>
</LinearLayout>
